{
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Write",
      "Read",
      "WebFetch",
      "WebSearch",
      "mcp__*"
    ],
    "deny": [],
    "defaultMode": "bypassPermissions"
  },
  "model": "opus",
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true
  },
  "language": "korean",
  "autoUpdatesChannel": "latest",
  "skipDangerousModePermissionPrompt": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node C:/Users/taewoo/.claude/scripts/protect-mcpbridge.js"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node C:/Users/taewoo/WorkHistory/context/backup-mcp.js"
          }
        ]
      }
    ]
  }
}
