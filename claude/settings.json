{
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Write",
      "Read",
      "WebFetch",
      "WebSearch",
      "mcp__*"
    ],
    "deny": [],
    "defaultMode": "bypassPermissions"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node C:/Users/taewoo/.claude/scripts/protect-mcpbridge.js"
          }
        ]
      }
    ],
    "Stop": []
  },
  "enabledPlugins": {
    "clangd-lsp@claude-plugins-official": true,
    "atlassian@taewoo-custom": true,
    "obsidian@taewoo-custom": true,
    "unreal-analyzer@taewoo-custom": true,
    "unreal-remote-control@taewoo-custom": true,
    "bear-relay@taewoo-custom": true,
    "context7@taewoo-custom": true,
    "codex-cli@taewoo-custom": true,
    "perforce@taewoo-custom": true,
    "context7@claude-plugins-official": true
  },
  "extraKnownMarketplaces": {
    "taewoo-custom": {
      "source": {
        "source": "directory",
        "path": "C:\\Users\\taewoo\\.claude\\plugins\\custom-mcp-marketplace"
      }
    }
  },
  "language": "korean",
  "autoUpdatesChannel": "latest",
  "skipDangerousModePermissionPrompt": true
}
